{
    "extends": ["akrc", "plugin:lit/recommended", "plugin:wc/recommended"],
    "rules": {
        "default-case": "off",
        "max-classes-per-file": "off",
        "no-unused-vars": "off"
    },
    "overrides": [
        {
            "files": ["./packages/**/__test__/*.ts"],
            "rules": {
                "no-undef": "off"
            }
        }
    ]
}
