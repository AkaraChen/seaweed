{
    "extends": ["akrc", "plugin:lit/recommended", "plugin:wc/recommended", "prettier"],
    "overrides": [
        {
            "files": "./packages/**/__test__/*.ts",
            "rules": {
                "no-undef": "off"
            }
        }
    ],
    "rules": {
        "default-case": "off",
        "no-unused-vars": "off",
        "arrow-body-style": "off",
        "prefer-arrow-callback": "off",
        "prettier/prettier": "warn",
        "unicorn/template-indent": "off",
        "class-methods-use-this": "off"
    },
    "plugins": ["prettier"]
}
